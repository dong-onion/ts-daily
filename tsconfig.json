{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    "rootDir": ".",

    // Node ESM 그대로 유지 (지금 값 OK)
    "module": "nodenext",
    "target": "esnext",

    // Node/Vitest 타입 인식
    "types": ["node", "vitest/globals"],

    // (원래 값 유지) 필요시 lib도 추가 가능: "lib": ["es2020"]

    // 출력물은 만들지 않고 타입 체크만
    "noEmit": true,

    // 아래 옵션들은 기존 것 유지
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["**/*.ts"]
}
